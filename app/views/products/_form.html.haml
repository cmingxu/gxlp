= form_for @product do |f|
  -if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :meta
    = f.text_field :meta
  .field
    = f.label :desc
    = f.text_area :desc
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :inventory
    = f.text_field :inventory
  .actions
    = f.submit 'Save'
